<div class="column">
  <nav class="panel">
    <p class="panel-heading">Who to follow</p>
    <% @users.each do |user| %>
      <div class="panel-block">
        <article class="media">
          <figure class="media-left">
            <p class="image is-32x32">
              <%= gravatar_image_tag(user.email, size: 32, alt: user.name) %>
            </p>
          </figure>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= user.name %> </strong> <small>@<%= user.username %></small>
                <br>
              </p>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </nav>
</div>
